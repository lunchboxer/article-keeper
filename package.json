{
  "name": "article-keeper",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "index": "npm run lint:markdown && node ./make-index.js && prettier ./src/lib/article-index*.json --write",
    "generate-pdfs": "node ./generate-pdfs.js",
    "build": "npm run index && npm run generate-pdfs && vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
    "lint": "prettier . --check . && eslint .",
    "lint:markdown": "node ./clean-articles.js && markdownlint-cli2 ./static/articles-md/*.md --fix",
    "format": "prettier . --write ."
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/kit": "^1.20.4",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte": "^2.30.0",
    "markdownlint-cli2": "^0.8.1",
    "marked": "^5.1.1",
    "prettier": "^3.0.0",
    "prettier-plugin-svelte": "^3.0.0",
    "svelte": "^4.1.0",
    "svelte-check": "^3.4.3",
    "typescript": "^5.0.0",
    "vite": "^4.4.2"
  },
  "type": "module",
  "dependencies": {
    "@sveltejs/adapter-static": "^2.0.2",
    "chalk": "^5.3.0",
    "clipboardy": "^3.0.0",
    "dotenv": "^16.3.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-unicorn": "^48.0.0",
    "inquirer": "^9.2.8",
    "puppeteer": "^20.9.0",
    "sluggo": "^1.0.0"
  }
}
